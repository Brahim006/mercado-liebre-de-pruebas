<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<% if(Array.isArray(visited) && visited.length !== 0){ %>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Basado en tu Ãºltima visita</h2>
				</div>
				<!-- Show the "visited" products -->
				<% visited.forEach(product => { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= product.id %> ">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.images[0] %> " alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= (product.discount) ? product.discountedPrice : product.parsedPrice %> </h2>
									<span><%= (product.discount) ? product.parsedDiscount + " OFF" : "" %> </span>
									<p><%= product.name %> </p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
				<% }); %><%# Fin forEach %>
			</div>
		</div>
	<% } %>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<% if(Array.isArray(inSale) && inSale.length !== 0){ %>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Ofertas:</h2>
				</div>
				<!-- Show the "visited" products -->
				<% inSale.forEach(product => { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= product.id %> ">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.images[0] %> " alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%= (product.discount) ? product.discountedPrice : product.parsedPrice %> </h2>
									<span><%= (product.discount) ? product.parsedDiscount + " OFF" : "" %> </span>
									<p><%= product.name %> </p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
				<% }); %><%# Fin forEach %>
			</div>
		</div>
	<% } %>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>