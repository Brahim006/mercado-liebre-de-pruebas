«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			
			<% if(typeof products != "undefined"){ %>
				<% products.forEach( product => { %>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= product.id %> ">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.images[0] %> " alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>
										Precio: $<%= product.parsedPrice %>
										<%= product.discount != 0 ? "- Precio final: $" + product.discountedPrice : ""; %> 
									</h2>
									<span>
										<%= product.discount != 0 ? product.parsedDiscount + "% OFF" : ""; %> 
									</span>
									<p><%= product.name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
	
				<% }); %>
			<% } else { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<h3>
						UPS! Nada por aquí...
					</h3>
				</div>
			<% } %>
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>